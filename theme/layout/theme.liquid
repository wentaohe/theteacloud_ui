          element.setAttribute("type", "text/css");
          element.setAttribute("href", "{{ 'component-shopify-reviews.css' | asset_url }}");
          document.body.appendChild(element);
        }
      </script>
    {%- endif -%}
  
    <div class="site-overlay" style="display:none"></div>
  
